<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <% if @course.image.present? %>
  <%= image_tag @course.image.url, class: 'img-fluid' %>
  <% end %>
  <br />
  <%= link_to 'Preview As a Student...', course_path(@course), class: 'btn btn-warning float-right' %>
  <br class="clr" />

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
      </li>
    <% end %>
  </ul>
  
</div>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %>
    </div>

    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <div class="col-12">
    <% @course.sections.each do |section| %>
      <div class="section">
          <%= section.title %>
            <% section.lessons.each do |lesson| %>
              <div class="lesson">
                <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b>
                -
                <%= lesson.subtitle %>
                <% end %>
              </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>